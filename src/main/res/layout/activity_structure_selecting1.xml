<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kishore.spotfinder.StructureSelecting1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the structure at which you are."
        android:textColor="#388E3C"
        android:textSize="22sp"
        android:layout_below="@+id/spotfinderTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/instructionTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/helpTextView"
            android:layout_width="match_parent"
            android:text="What's this?"
            android:textColor="#FFAB40"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:onClick="help"/>
        <Button
            android:id="@+id/structure1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="16dp"
            android:textColor="#FFAB40"
            android:text="Structure 1"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:background="#FFFFFF"
            android:shadowColor="#FFAB00"
            android:layout_centerHorizontal="true"
            android:onClick="structure1"
            android:visibility="gone"/>
        <Button
            android:id="@+id/structure2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="16dp"
            android:textColor="#FFAB40"
            android:text="Structure 2"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:background="#FFFFFF"
            android:shadowColor="#FFAB00"
            android:layout_centerHorizontal="true"
            android:onClick="structure2"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
