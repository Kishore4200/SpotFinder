<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.kishore.spotfinder.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.kishore.spotfinder.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:id="@+id/spotfinderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="SpotFinder"
                android:textColor="#388E3C"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/instructionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Select the function you would like to perform."
                android:textColor="#388E3C"
                android:textSize="22sp"
                android:visibility="gone"/>
            <FrameLayout
                android:id="@+id/progressBarHolder"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                android:alpha="0.5"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <Button
                android:id="@+id/findspotButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textColor="#FFAB40"
                android:text="Find a Spot"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:background="#FFFFFF"
                android:shadowColor="#FFAB00"
                android:layout_centerHorizontal="true"
                android:onClick="findingClosestSpots"/>
            <Button
                android:id="@+id/whereParkButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FFAB40"
                android:text="Where Did I Park?"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:background="#FFFFFF"
                android:shadowColor="#FFAB00"
                android:layout_centerHorizontal="true"
                android:onClick="wherePark"/>
            <Button
                android:id="@+id/helpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="16dp"
                android:textColor="#388E3C"
                android:text="Help"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:background="#FFFFFF"
                android:shadowColor="#FFAB00"
                android:layout_centerHorizontal="true"
                android:onClick="help"/>
            <Button
                android:id="@+id/structureSelectButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FFAB40"
                android:text="Select a different structure"
                android:textSize="15sp"
                android:background="#FFFFFF"
                android:shadowColor="#FFAB00"
                android:layout_centerHorizontal="true"
                android:onClick="structureSelect"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>