<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kishore.spotfinder.SpotFinding1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:gravity="fill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Select the exit to which you want your spot closest."
            android:textColor="#388E3C"
            android:textSize="22sp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/exit1Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:text="@string/exit_1"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#FFAB40"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/exit2Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:text="@string/exit_2"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#FFAB40"
                android:textAlignment="center"
                android:visibility="gone"/>
            <Button
                android:id="@+id/exit3Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:text="@string/exit_3"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#FFAB40"
                android:textAlignment="center"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/exit4Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:text="@string/exit_4"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#FFAB40"
                android:textAlignment="center"
                android:visibility="gone"/>
            <Button
                android:id="@+id/exit5Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:text="@string/exit_5"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#FFAB40"
                android:textAlignment="center"
                android:visibility="gone"/>
            <Button
                android:id="@+id/exit6Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:text="@string/exit_6"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#FFAB40"
                android:textAlignment="center"
                android:visibility="gone"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/mapImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</RelativeLayout>